<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chat_left_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_girl_photo" />

        <com.example.ownproject.util.ChatView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="35dp"

            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"

            chat:arrow_direction="left"
            chat:arrow_height="12dp"
            chat:arrow_up_distance="10dp"
            chat:arrow_width="5dp"
            chat:conner_radius="6dp"
            chat:fill_color="#FFFFFF"
            chat:is_arrow_center="true"
            chat:press_fill_color="#50111111"
            chat:press_stroke_color="#50111111"
            chat:stroke_color="#CCCCCC"
            chat:stroke_width="1dp">

            <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/chat_view_left_text_test"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />
        </com.example.ownproject.util.ChatView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_right_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:visibility="gone"
        android:layout_marginTop="30dp">

        <com.example.ownproject.util.ChatView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="80dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="35dp"

            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"

            chat:arrow_direction="right"
            chat:arrow_height="12dp"
            chat:arrow_up_distance="10dp"
            chat:arrow_width="5dp"
            chat:conner_radius="6dp"
            chat:fill_color="#1296db"
            chat:is_arrow_center="true"
            chat:press_fill_color="#50111111"
            chat:press_stroke_color="#50111111"
            chat:stroke_color="#1296db"
            chat:stroke_width="1px">

            <TextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/chat_view_right_text_test"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </com.example.ownproject.util.ChatView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_boy_photo" />
    </LinearLayout>

</LinearLayout>